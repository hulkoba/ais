<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="19dp"
    android:background="@color/black"
    android:keepScreenOn="true"
    android:paddingBottom="13dp" tools:context=".MainActivity">
    <!-- keepScreenOn = bleibt immer an-->
    <!-- Pfeil transparent up-->
    <ImageView
        android:id="@+id/pfeil_transparent2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil_transparent"
        android:contentDescription="@string/schneller"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/pfeil_transparent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil_transparent"
        android:contentDescription="@string/schneller"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_centerHorizontal="true"
       />
    <!-- Pfeil transparent down-->
    <ImageView
        android:id="@+id/pfeil_transparent_down"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil_transparent_down"
        android:contentDescription="@string/langsamer"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/pfeil_transparent_down2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil_transparent_down"
        android:contentDescription="@string/langsamer"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="440dp"
        android:layout_centerHorizontal="true"
        />

    <!-- Pfeil up-->
    <ImageView
        android:id="@+id/pfeil2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil"
        android:contentDescription="@string/schneller"
        android:visibility="invisible"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false" />
    <ImageView
        android:id="@+id/pfeil"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil"
        android:contentDescription="@string/schneller"
        android:visibility="invisible"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false" />
    <!-- Pfeil down-->
    <ImageView
        android:id="@+id/pfeil_down"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil_down"
        android:contentDescription="@string/langsamer"
        android:visibility="invisible"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false" />
    <ImageView
        android:id="@+id/pfeil_down2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pfeil_down"
        android:contentDescription="@string/langsamer"
        android:visibility="invisible"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="440dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false" />


    <!-- COUNTDOWN  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/countdown"
        android:textColor="@color/red"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:textSize="90dp" />
    <ImageView
        android:id="@+id/kreis"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/kreis"
        android:contentDescription="@string/stop"
        android:layout_centerInParent="true"
        android:layout_margin="70dp"/>


<!-- STOP & OK  -->
    <ImageView
        android:id="@+id/stop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/stop"
        android:contentDescription="@string/stop"
        android:layout_centerInParent="true"
        android:layout_margin="70dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ok"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ok"
        android:contentDescription="@string/ok"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_margin="70dp" />

    <ImageView
        android:id="@+id/mep"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/mep"
        android:contentDescription="@string/mep"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_margin="70dp" />


</RelativeLayout>
